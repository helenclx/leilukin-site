{
    "name": "leilukin-site",
    "description": "Leilukin's personal and hobby website.",
    "author": "Leilukin",
    "repository": {
        "type": "git",
        "url": "https://git.leilukin.com/Leilukin/leilukin-site"
    },
    "scripts": {
        "build-11ty": "npx @11ty/eleventy",
        "start-11ty": "npm run build-11ty -- --serve --quiet",
        "create-search-index": "npx -y pagefind --site _site",
        "build": "npm run build-11ty -- --quiet && npm run create-search-index",
        "start": "npm run build -- --serve",
        "rebuild": "rm -r _site && npm run build",
        "restart": "rm -r _site && npm run start"
    },
    "type": "module",
    "dependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-navigation": "^1.0.4",
        "@11ty/eleventy-plugin-rss": "^2.0.4",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
        "@uncenter/eleventy-plugin-toc": "^1.0.3",
        "@zachleat/details-utils": "^2.0.2",
        "eleventy-plugin-embed-everything": "^1.21.0",
        "eleventy-plugin-vento": "^5.0.0",
        "eleventy-plugin-wordcount-extended": "^0.2.1",
        "markdown-it-anchor": "^9.2.0",
        "markdown-it-attribution": "^0.1.4",
        "markdown-it-attrs": "^4.3.1",
        "markdown-it-bracketed-spans": "^1.0.1",
        "markdown-it-deflist": "^3.0.0",
        "markdown-it-footnote": "^4.0.0"
    }
}
