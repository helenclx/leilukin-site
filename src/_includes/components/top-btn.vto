{{- css }}
.top-btn,
.top-btn:hover {
	color: var(--clr-top-btn-txt);
	text-decoration: none;
	font-weight: 700;
}

.top-btn {
	position: fixed;
	bottom: 0.5rem;
	right: 0.5rem;
	z-index: 999;

	background-color: var(--clr-top-btn-bg);
	display: flex;
	align-items: center;
	border-radius: 50em;
	padding: 0.3em 0.5em;
	gap: 0.2em;
}

.top-btn:focus {
	outline: 0.25em solid var(--clr-top-btn-bg);
	outline-offset: 0.15em;
}

.top-btn__arrow {
	display: inline-block;
	width: 1em;
	aspect-ratio: 1 / 1;
	stroke-width: 0;
	stroke: currentColor;
	fill: currentColor;
}
{{ /css }}
