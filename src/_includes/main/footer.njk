{% extends "global/footer.njk" %}

{% block footerContent %}
    <p>Made with â™¥ by {{ sitemeta.siteAuthor.name }} since 11 September 2022</p>

    {% set currentUrl %}{{ page.url }}{% endset %}
    <ul class="inline-nav footer__links">
        <li><a href="/feed.xml">RSS</a></li>
        <li><a
            {% if currentUrl === "/sitemap/" %}aria-current="page"{% endif %}
            href="/sitemap/
        ">Site Map</a></li>
        <li><a
            {% if currentUrl === "/changelogs/" %}aria-current="page"{% endif %}
            href="/changelogs/"
        >Changelogs</a></li>
        {%- for statement in collections.statements -%}
            <li><a
                {% if entry.url == page.url %}aria-current="page"{% endif %}
                href="{{ statement.url }}"
            >{{ statement.data.title }}</a></li>
        {%- endfor -%}
    </ul>
{% endblock %}

