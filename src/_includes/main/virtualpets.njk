{%- macro virtualPet(url, img, alt, tooltip=alt) -%}
    <li data-tooltip>
        <a href="{{ url }}" data-tooltip-trigger title="{{ tooltip }}">
            <img src="{{ img }}" alt="{{ alt }}" loading="lazy">
        </a>
    </li>
{%- endmacro -%}

